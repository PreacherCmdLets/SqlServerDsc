[ClassVersion("1.0.0.0"), FriendlyName("SqlAgentNotification")]
class MSFT_SqlAgentNotification : OMI_BaseResource
{
    [Key, Description("The name of the SQL Agent Operator.")] String Operator;
    [Key, Description("The name of the SQL Agent Alert.")] String Alert;
    [Write, Description("Specifies if the SQL Agent Operator Alert notification should be present or absent. Default is Present."), ValueMap{"Present","Absent"}, Values{"Present","Absent"}] String Ensure;
    [Write, Description("The host name of the SQL Server to be configured. Default is $env:COMPUTERNAME.")] String ServerName;
    [Key, Description("The name of the SQL instance to be configured.")] String InstanceName;
    [Write, Description("The type of SQL Agent Alert notification for the SQL Agent Operator.")] String NotificationType[];
};
